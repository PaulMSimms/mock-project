{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block stylesheets %}
	<style>
		.auth-container {
			max-width: 400px;
			margin: 50px auto;
			padding: 0 20px;
		}

		.auth-panel {
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			border-radius: 6px;
			overflow: hidden;
		}

		.auth-header {
			background: linear-gradient(135deg, #337ab7, #286090);
			color: white;
			text-align: center;
			padding: 30px 20px;
		}

		.auth-header h2 {
			margin: 0;
			font-weight: 300;
		}

		.auth-header .glyphicon {
			font-size: 48px;
			margin-bottom: 15px;
			opacity: 0.8;
		}

		.auth-body {
			padding: 30px;
			background: white;
		}

		.form-group {
			margin-bottom: 20px;
		}

		.form-control {
			height: 45px;
			border-radius: 4px;
			border: 1px solid #ddd;
			font-size: 16px;
			transition: all 0.3s ease;
		}

		.form-control:focus {
			border-color: #337ab7;
			box-shadow: 0 0 0 3px rgba(51, 122, 183, 0.1);
		}

		.btn-login {
			width: 100%;
			height: 45px;
			background: linear-gradient(135deg, #5cb85c, #449d44);
			border: none;
			border-radius: 4px;
			color: white;
			font-size: 16px;
			font-weight: 600;
			transition: all 0.3s ease;
		}

		.alert {
			border-radius: 4px;
			margin-bottom: 20px;
		}

		.auth-footer {
			text-align: center;
			padding: 20px;
			background: #f8f9fa;
			border-top: 1px solid #dee2e6;
		}

		.auth-footer a {
			color: #337ab7;
			text-decoration: none;
			font-weight: 500;
		}

		.auth-footer a:hover {
			text-decoration: underline;
		}

		.input-group {
			position: relative;
		}

		.input-group .glyphicon {
			position: absolute;
			left: 15px;
			top: 50%;
			transform: translateY(-50%);
			color: #999;
			z-index: 3;
		}

		.input-group .form-control {
			padding-left: 45px;
		}

		.remember-me {
			display: flex;
			align-items: center;
			margin: 15px 0;
		}

		.remember-me input {
			margin-right: 8px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="auth-container">
			<div class="auth-panel">
				<div class="auth-header">
					<span class="glyphicon glyphicon-lock"></span>
					<h2>Welcome Back</h2>
					<p>Please sign in to your account</p>
				</div>

				<div class="auth-body">
					{% if error %}
						<div class="alert alert-danger">
							<span class="glyphicon glyphicon-exclamation-sign"></span>
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							<span class="glyphicon glyphicon-ok-sign"></span>
							{{ message }}
						</div>
					{% endfor %}

					<form method="post">
						<div class="form-group">
							<label for="inputEmail" class="control-label">Email Address</label>
							<div class="input-group">
								<span class="glyphicon glyphicon-envelope"></span>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Enter your email address" required autofocus>
							</div>
						</div>

						<div class="form-group">
							<label for="inputPassword" class="control-label">Password</label>
							<div class="input-group">
								<span class="glyphicon glyphicon-lock"></span>
								<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Enter your password" required>
							</div>
						</div>

						<div class="remember-me">
							<input type="checkbox" id="remember_me" name="_remember_me" checked>
							<label for="remember_me">Keep me signed in</label>
						</div>

                    <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">


						<button class="btn-login" type="submit">
							<span class="glyphicon glyphicon-log-in"></span>
							Sign In
						</button>
					</form>
				</div>

				<div class="auth-footer">
					<p>Don't have an account?
						<a href="{{ path('app_register') }}">
							<span class="glyphicon glyphicon-user-plus"></span>
							Create one here
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
